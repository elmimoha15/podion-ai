# Environment Configuration for Podion AI Backend

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=podion--ai-firebase-adminsdk-fbsvc-84f3037e73.json

# Database Configuration (if needed later)
DATABASE_URL=postgresql://user:password@localhost:5432/podion_ai

# API Keys (for future integrations)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Deepgram Configuration
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Brevo (Sendinblue) Email Service Configuration
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@podion.ai
BREVO_SENDER_NAME=Podion AI

# Paddle Subscription Payment Configuration
PADDLE_API_KEY=your-paddle-api-key-here
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret-here
PADDLE_ENVIRONMENT=sandbox

# Firebase Storage Configuration
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket

# Scalability Configuration
# Enable/disable scalability features
ENABLE_METRICS_SERVER=false
ENABLE_JOB_QUEUE=false
ENABLE_RATE_LIMITING=true

# Redis Configuration (for caching, job queue, rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration (for async job processing)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring Configuration
METRICS_PORT=8001
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3
RATE_LIMIT_DEFAULT_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Connection Pool Configuration
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE=20
HTTP_TIMEOUT=30

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Job Queue Configuration
JOB_QUEUE_MAX_WORKERS=4
JOB_QUEUE_MAX_RETRIES=3
JOB_QUEUE_RETRY_DELAY=60

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_DATA=300
CACHE_TTL_WORKSPACE_DATA=600
CACHE_TTL_PODCAST_METADATA=1800
CACHE_TTL_API_RESPONSES=3600

# External API Configuration
DEEPGRAM_TIMEOUT=120
GEMINI_TIMEOUT=180
FIREBASE_TIMEOUT=60

# Performance Tuning
MAX_CONCURRENT_UPLOADS=10
MAX_CONCURRENT_TRANSCRIPTIONS=5
MAX_CONCURRENT_SEO_GENERATIONS=3
BATCH_SIZE_FIRESTORE=500

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
SERVICE_CHECK_TIMEOUT=30
